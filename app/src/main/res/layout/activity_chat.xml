<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F5FF">

    <!-- 頂部工具列 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A8C6FA"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000">

        <!-- 更換背景的 + 號按鈕 -->
        <!-- 修改重點：
             1. layout_width 改為 wrap_content 並設 minWidth=0dp，避免字被切掉
             2. layout_gravity="end|center_vertical" 讓它靠右且垂直置中
             3. layout_marginEnd="10dp" 實現距離右邊 10dp
             4. 移除了無效的 app:layout_constraint... 屬性
        -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            android:text="+"
            android:textSize="18sp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 聊天內容列表 -->
    <!-- 修改重點：移除了多餘的 bias 屬性，並加入 tools:listitem 方便預覽 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/layout_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:listitem="@android:layout/simple_list_item_1" />

    <!-- 底部輸入框區域 -->
    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="輸入訊息..."
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="傳送" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
